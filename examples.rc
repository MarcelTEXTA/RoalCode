// ===== Gestion des erreurs =====

try {
    int result = 10 / nbr
    console.print("Résultat de 10 /", string(nbr), "=", string(result))
} catch (DivisionByZeroError e) {
    console.print("Erreur : Division par zéro !")
} catch (Exception e) {
    console.print("Erreur inattendue :", e.message)
} finally {
    console.print("Fin du bloc try-catch.")
}


