{
  "name": "roalcode",
  "displayName": "RoalCode",
  "description": "Support du langage RoalCode",
  "version": "0.0.1",
  "publisher": "roalcode",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:roalcode"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "roalcode",
        "aliases": ["RoalCode", "roalcode"],
        "extensions": [".rc"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "roalcode",
        "scopeName": "source.roalcode",
        "path": "./syntaxes/roalcode.tmLanguage.json"
      }
    ]
  }
}
